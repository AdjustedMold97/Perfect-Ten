<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.DMsScreen">

    <Button
        android:id="@+id/dms_back_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DMs_Feed_TextView"
        android:layout_width="408dp"
        android:layout_height="606dp"
        android:layout_marginBottom="8dp"
        android:nestedScrollingEnabled="true"
        android:scrollbars="vertical"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/dms_Input_Text"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dms_Input_Text"
        android:layout_width="314dp"
        android:layout_height="49dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Type Here!"
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/dms_send_Button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/dms_send_Button"
        android:layout_width="92dp"
        android:layout_height="45dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>