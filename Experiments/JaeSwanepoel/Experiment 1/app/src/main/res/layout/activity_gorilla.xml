<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GorillaActivity">

    <ImageView
        android:id="@+id/gorilla_image"
        android:layout_width="156dp"
        android:layout_height="160dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/gorilla"
        tools:srcCompat="@mipmap/gorilla"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/view_gorilla_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="56dp"
        android:text="View Gorilla"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gorilla_image" />

    <Button
        android:id="@+id/delete_gorilla_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Gorilla Away"
        app:layout_constraintStart_toStartOf="@+id/view_gorilla_button"
        app:layout_constraintTop_toBottomOf="@+id/view_gorilla_button"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/gorilla_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="40dp"
        android:text="GORILLA"
        android:textSize="48sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/gorilla_image"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gorilla_home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="24dp"
        android:text="home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>