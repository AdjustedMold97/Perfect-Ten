<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.PerfectTen">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Perfect Ten"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PerfectTen"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Screens.PermaDelete"
            android:exported="true" />
        <activity
            android:name=".Screens.PostView"
            android:label="Post View"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".Screens.DMsScreen"
            android:exported="false" />
        <activity
            android:name=".Screens.FindUserScreen"
            android:label="Find User" />
        <activity
            android:name=".Screens.AdminScreen"
            android:exported="false"
            android:label="Admin" />
        <activity
            android:name=".Screens.ProfileView"
            android:exported="false"
            android:label="Profile View" />
        <activity
            android:name=".Screens.SignUp"
            android:exported="true"
            android:label="Sign Up" />
        <activity
            android:name=".Screens.PostCreation"
            android:exported="true"
            android:label="Make a Post" />
        <activity
            android:name=".Screens.LoginScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Screens.SettingsScreen"
            android:exported="true"
            android:label="Settings" />
        <activity
            android:name=".Screens.FriendsScreen"
            android:exported="true"
            android:label="Friends" />
        <activity
            android:name=".Screens.HomeScreen"
            android:exported="true"
            android:label="Home" />
        <activity
            android:name=".net_utils.Error"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".net_utils.LoginFail"
            android:theme="@style/AppTheme.CustomTheme" />
    </application>

</manifest>