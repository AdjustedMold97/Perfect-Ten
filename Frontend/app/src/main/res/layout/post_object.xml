<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/textlines">

    <TextView
        android:id="@+id/postObjectBody"
        android:layout_width="231dp"
        android:layout_height="80dp"
        android:layout_marginTop="3dp"
        android:hint="body"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/postObjectTitle"
        app:layout_constraintTop_toBottomOf="@+id/postObjectTitle" />

    <TextView
        android:id="@+id/postObjectTitle"
        android:layout_width="231dp"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:hint="title"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postObjectTime"
        android:layout_width="50dp"
        android:layout_height="52dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:hint="time"
        android:visibility="visible"
        app:layout_constraintStart_toEndOf="@+id/postObjectTitle"
        app:layout_constraintTop_toTopOf="@+id/postObjectTitle" />

    <TextView
        android:id="@+id/postObjectUname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:hint="user"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/postObjectBody"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postObjectID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/postObjectTime"
        app:layout_constraintTop_toTopOf="@+id/postObjectTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>